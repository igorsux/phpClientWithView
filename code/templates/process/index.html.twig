{% extends 'base.html.twig' %}
{% block title %}
    Главная
{% endblock title %}
{% block body %}
    <div class="col-md-12">
        <a class="btn btn-info" href="{{ path('index') }}">
            Главная
        </a>
        <a class="btn btn-info" href="{{ path('bases') }}">
            Базы
        </a>
    </div>

    <div class="col-md-8">
    <table id="example" class="table table-striped table-bordered table-hover table-responsive" style="width:100%"
           data-toggle="table">
        <thead>
        <tr>
            <th>id</th>
            <th>статус</th>
            <th>тип</th>
            <th>прогресс</th>
            <th>Базы</th>
            <th>Действия</th>
        <tr>
        </thead>
        <tbody>
        {% for item in items %}
        <tr>
            <th>{{ item.id }}</th>
            <th>{{ item.status }}</th>
            <th>{{ item.type }}</th>
            <th>{{ item.progress }}%</th>
            <th>{{ dump(item.contactBaseIds) }}</th>
            <th>
                <a class="btn btn-danger" href="{{ path('process-delete', {id:item.id}) }}">
                    Удалить
                </a>
            </th>
        <tr>
            {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}